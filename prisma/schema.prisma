// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ProviderUsers {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String
  password    String
  gender      String?
  dateOfBirth DateTime? @map("date_of_birth")
  phone       String?   @unique
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @default(now()) @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")
  token       String?   @unique

  @@map("provider_users")
}

model ProviderUsersData {
  id              String    @id @default(cuid())
  providerUsersId String    @map("provider_users_id")
  typeLabelId     String    @map("type_label_id")
  value           String
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @default(now()) @map("updated_at")
  deletedAt       DateTime? @map("deleted_at")

  @@map("provider_users_data")
}

model TypeLabel {
  id         String    @id @default(cuid())
  name       String
  typeDataId String?   @map("type_data_id")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @default(now()) @map("updated_at")
  deletedAt  DateTime? @map("deleted_at")

  @@map("type_label")
}

model TypeData {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @default(now()) @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("type_data")
}

model Raffles {
  id             String    @id @default(uuid())
  title          String
  deleted        Boolean   @default(false)
  deletedAt      DateTime? @map("deleted_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updateAt       DateTime  @default(now()) @map("update_at")
  drawDate       DateTime? @map("draw_date")
  amountNumber   Int       @map("amount_number")
  priceNumber    Int       @map("price_number")
  providerUserId String    @map("provider_user_id")
  winningNumber  Int       @map("winning_number")
  priceProduct   Int       @map("price_product")
  description    String

  @@map("raflles")
}

model SubscriberUsers {
  id    String @id @default(cuid())
  name  String
  email String
  phone String

  @@map("subscriber_users")
}
